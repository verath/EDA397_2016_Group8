<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="se.chalmers.eda397.group8.pairprogramming">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">

        <!-- Main -->
        <activity android:name="se.chalmers.eda397.group8.pairprogramming.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Requirements -->
        <activity
            android:name="se.chalmers.eda397.group8.pairprogramming.reqspec.detail.ReqSpecDetailActivity"
            android:label="@string/title_activity_req_specs" />
        <activity
            android:name="se.chalmers.eda397.group8.pairprogramming.reqspec.reqspecs.ReqSpecsActivity"
            android:label="@string/title_activity_req_specs" />

        <!-- Notes -->
        <activity
            android:name="se.chalmers.eda397.group8.pairprogramming.note.notes.NotesActivity"
            android:label="@string/title_activity_notes" />
        <activity
            android:name="se.chalmers.eda397.group8.pairprogramming.note.detail.NoteDetailActivity"
            android:label="@string/title_activity_note_detail" />
        <activity
            android:name="se.chalmers.eda397.group8.pairprogramming.note.addedit.AddEditNoteActivity"
            android:windowSoftInputMode="stateAlwaysVisible|adjustResize" />

        <!-- Backlog -->
        <activity
            android:name="se.chalmers.eda397.group8.pairprogramming.backlog.BacklogActivity"
            android:label="@string/title_activity_backlog" />
        <activity
            android:name="se.chalmers.eda397.group8.pairprogramming.backlog.add.AddBacklogActivity"
            android:label="@string/title_activity_add_backlog" />
        <activity
            android:name="se.chalmers.eda397.group8.pairprogramming.backlog.detail.BacklogDetailActivity"
            android:label="@string/title_activity_details_backlog" />

        <!-- Timer -->
        <activity
            android:name="se.chalmers.eda397.group8.pairprogramming.timer.TimerActivity"
            android:label="@string/title_activity_timer"
            android:parentActivityName="se.chalmers.eda397.group8.pairprogramming.MainActivity" />
        <service
            android:name="se.chalmers.eda397.group8.pairprogramming.timer.TimerService"
            android:enabled="true"
            android:exported="false" />

    </application>

</manifest>
