<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="group8.eda397.chalmers.se.pairprogramming">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Main -->
        <activity
            android:name="se.chalmers.eda397.group8.pairprogramming.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Requirements -->
        <activity
            android:name="se.chalmers.eda397.group8.pairprogramming.requirement.detail.RequirementDetailActivity"
            android:label="@string/title_activity_requirements"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="se.chalmers.eda397.group8.pairprogramming.requirement.requirements.RequirementsActivity"
            android:label="@string/title_activity_requirements"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- Notes -->
        <activity
            android:name="se.chalmers.eda397.group8.pairprogramming.note.notes.NotesActivity"
            android:label="@string/title_activity_notes"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="se.chalmers.eda397.group8.pairprogramming.note.detail.NoteDetailActivity"
            android:label="@string/title_activity_note_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="se.chalmers.eda397.group8.pairprogramming.note.addedit.AddEditNoteActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateAlwaysVisible|adjustResize" />

        <!-- Backlog -->
        <activity
            android:name="se.chalmers.eda397.group8.pairprogramming.backlog.BacklogActivity"
            android:label="@string/title_activity_backlog"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="se.chalmers.eda397.group8.pairprogramming.backlog.add.AddBacklogActivity"
            android:label="@string/title_activity_add_backlog"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name="se.chalmers.eda397.group8.pairprogramming.backlog.detail.BacklogDetailActivity"
            android:label="@string/title_activity_details_backlog"
            android:theme="@style/AppTheme.NoActionBar"/>

        <!-- Timer -->
        <activity
            android:name="se.chalmers.eda397.group8.pairprogramming.timer.TimerActivity"
            android:label="@string/title_activity_timer"
            android:parentActivityName="se.chalmers.eda397.group8.pairprogramming.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <service
            android:name="se.chalmers.eda397.group8.pairprogramming.timer.TimerService"
            android:enabled="true"
            android:exported="false" />
    </application>

</manifest>
