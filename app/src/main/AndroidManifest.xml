<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="group8.eda397.chalmers.se.pairprogramming">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Main -->
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Notes -->
        <activity
            android:name=".note.notes.NotesActivity"
            android:label="@string/title_activity_notes"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".note.notedetail.NoteDetailActivity"
            android:label="@string/title_activity_note_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".note.addeditnote.AddEditNoteActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateAlwaysVisible|adjustResize" />

        <!-- Backlog -->
        <activity
            android:name=".backlog.BacklogActivity"
            android:label="@string/title_activity_backlog"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".backlog.add.AddBacklogActivity"
            android:label="@string/title_activity_add_backlog"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- Timer -->
        <activity
            android:name=".timer.TimerActivity"
            android:label="@string/title_activity_timer"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <service
            android:name=".timer.TimerService"
            android:enabled="true"
            android:exported="false" />
    </application>

</manifest>