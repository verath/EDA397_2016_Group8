<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="se.chalmers.eda397.group8.pairprogramming.MainActivity">

    <include layout="@layout/appbar_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <Button
            android:id="@+id/btn_notes"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/show_notes"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            style="@style/AppTheme.MenuButton"/>

        <Button
            android:id="@+id/show_backlog_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/show_backlog"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            style="@style/AppTheme.MenuButton"/>

        <Button
            android:id="@+id/btn_requirements"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/show_requirements"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            style="@style/AppTheme.MenuButton"/>

        <Button
            android:id="@+id/btn_timer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/show_timer"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            style="@style/AppTheme.MenuButton"/>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
